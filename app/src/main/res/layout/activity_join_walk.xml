<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.bartelsl.photowalk.JoinWalk">

    <Button
        android:id="@+id/btnJoinWalk"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Join this Walk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvParticipants"
        style="@style/Button1"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tvParticipants"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnAttend"
        style="@style/Button1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnJoinWalk"
        android:layout_alignStart="@+id/btnJoinWalk"
        android:layout_below="@+id/btnJoinWalk"
        android:backgroundTint="#585858"
        android:text="Actively attend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvParticipants" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/tvStartTime"
        android:layout_alignBottom="@+id/tvStartTime"
        android:layout_toEndOf="@+id/tvStartTime"
        android:text="Start Time"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOrganizer"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvStartTime"
        android:layout_marginTop="19dp"
        android:text="Organizer"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTDate" />

    <TextView
        android:id="@+id/tvEndPoint"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/tvOrganizer"
        android:layout_alignStart="@+id/tvOrganizer"
        android:layout_below="@+id/tvOrganizer"
        android:layout_marginTop="11dp"
        android:text="End Point"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTStartPoint" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/tvEndPoint"
        android:layout_alignStart="@+id/tvEndPoint"
        android:layout_below="@+id/tvEndPoint"
        android:layout_marginTop="16dp"
        android:text="Duration"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTEndPoint" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/tvDuration"
        android:layout_alignStart="@+id/tvDuration"
        android:layout_below="@+id/tvDuration"
        android:layout_marginTop="11dp"
        android:text="Description"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTDuration" />

    <TextView
        android:id="@+id/tvParticipants"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/tvDescription"
        android:layout_alignStart="@+id/tvDescription"
        android:layout_below="@+id/tvDescription"
        android:layout_marginTop="13dp"
        android:text="Participants"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTDescription" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnJoinWalk"
        android:layout_marginTop="75dp"
        android:text="Date"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOrganizer"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/tvStartTime"
        android:layout_alignStart="@+id/tvStartTime"
        android:layout_below="@+id/tvStartTime"
        android:layout_marginTop="13dp"
        android:text="Start Point"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTDate" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnJoinWalk"
        android:layout_below="@+id/btnJoinWalk"
        android:text="Map" />


</RelativeLayout>
