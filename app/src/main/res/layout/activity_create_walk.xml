<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bartelsl.photowalk.CreateWalk">

<android.support.v7.widget.AppCompatButton
    android:id="@+id/btnCreateWalk"
    android:layout_width="250dp"
    android:layout_height="50dp"
    android:text="Create this Walk"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="40dp"
    app:layout_constraintTop_toBottomOf="@+id/eTDescription"
    android:onClick="jumpToPage"/>

    <AppCompatEditText
        android:id="@+id/eTDate"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="Date"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <AppCompatEditText
        android:id="@+id/eTStartPoint"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="Start Point"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/eTDate" />

    <AppCompatEditText
        android:id="@+id/eTEndPoint"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="End Point"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/eTStartPoint" />

    <AppCompatEditText
        android:id="@+id/eTDuration"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="Duration"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/eTEndPoint" />

    <AppCompatEditText
        android:id="@+id/eTDescription"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="text"
        android:text="Description"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/eTDuration" />

</android.support.constraint.ConstraintLayout>
