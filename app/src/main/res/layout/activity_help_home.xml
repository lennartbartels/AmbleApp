<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context="com.example.bartelsl.photowalk.JoinWalk"
        tools:ignore="ExtraText">


        <TextView
            android:id="@+id/WhatToDoinHome"
            style="@style/EditText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exitHelpHome"
            android:text="@string/what_to_do_in_home"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="45dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/ExplanationHOme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_this_list_you_can_find_all_upcoming_walks_to_see_all_details_about_a_walk_that_interests_you_simply_click_on_it_you_can_also_search_for_walks_in_a_specific_location_otherwise_choose_where_to_navigate_next"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/WhatToDoinHome"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="45dp"
            android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/exitHelpHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="45dp"
        app:srcCompat="@drawable/ic_close_black_24dp" />

</RelativeLayout>
